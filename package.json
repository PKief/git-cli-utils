{
  "name": "git-cli-utils",
  "version": "1.0.0",
  "type": "module",
  "description": "A collection of CLI utilities for managing Git repositories.",
  "main": "dist/index.js",
  "bin": {
    "git-utils": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/index.js",
    "lint": "biome check",
    "format": "bunx @biomejs/biome format --write ./src",
    "test": "npm run build && node test-core.js",
    "test:e2e": "npm run build && node ./dist/e2e/e2e-test-suite.js",
    "test:ci": "npm run build && node ./dist/e2e/ci-test-suite.js"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/pkief"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "clipboardy": "^4.0.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/bun": "^1.2.22",
    "@types/clipboardy": "^1.1.0",
    "@types/node": "^24.4.0",
    "changelogen": "^0.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "git",
    "cli",
    "utilities",
    "command-line"
  ],
  "author": "Philipp Kief",
  "license": "MIT"
}
