{
  "name": "git-cli-utils",
  "version": "1.20.0",
  "type": "module",
  "description": "A collection of CLI utilities for managing Git repositories.",
  "main": "dist/index.js",
  "bin": {
    "git-utils": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PKief/git-cli-utils.git"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "bun run verify",
    "start": "bun ./dist/index.js",
    "lint": "biome check",
    "format": "bunx @biomejs/biome format --write ./",
    "test": "bun test",
    "test:unit": "bun test src",
    "test:e2e": "bun test test/e2e/",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "verify": "sheriff verify",
    "prepublish": "bun run build",
    "prepare": "husky"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/pkief"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "clipboardy": "^5.0.2",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@softarc/sheriff-core": "^0.19.6",
    "@types/bun": "^1.3.5",
    "@types/clipboardy": "^2.0.4",
    "@types/node": "^25.0.3",
    "changelogen": "^0.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "git",
    "cli",
    "utilities",
    "command-line"
  ],
  "author": "Philipp Kief",
  "license": "MIT"
}
