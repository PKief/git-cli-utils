{
  "name": "git-cli-utils",
  "version": "1.4.0",
  "type": "module",
  "description": "A collection of CLI utilities for managing Git repositories.",
  "main": "dist/index.js",
  "bin": {
    "git-utils": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PKief/git-cli-utils.git"
  },
  "scripts": {
    "build": "tsc",
    "start": "bun ./dist/index.js",
    "lint": "biome check",
    "format": "bunx @biomejs/biome format --write ./src",
    "test": "npm run build && bun test",
    "test:unit": "bun test test/unit/",
    "test:e2e": "npm run build && bun test test/e2e/",
    "test:integration": "npm run build && bun test test/integration/",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:legacy": "npm run build && npm run test:legacy:e2e && npm run test:legacy:ci",
    "test:legacy:e2e": "npm run build && bun ./dist/e2e/e2e-test-suite.js",
    "test:legacy:ci": "npm run build && bun ./dist/e2e/ci-test-suite.js",
    "prepare": "husky"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/pkief"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "clipboardy": "^4.0.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/bun": "^1.2.22",
    "@types/clipboardy": "^1.1.0",
    "@types/node": "^24.4.0",
    "changelogen": "^0.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "git",
    "cli",
    "utilities",
    "command-line"
  ],
  "author": "Philipp Kief",
  "license": "MIT"
}
